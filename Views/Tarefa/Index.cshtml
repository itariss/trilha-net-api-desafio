@model IEnumerable<TrilhaApiDesafio.Models.Tarefa>


<div class="container-fluid">
    <div class="row">
        <ul class="list-group">
            @foreach (var item in Model)
            {
                <li class="list-group-item d-flex flex-column flex-sm-row"> 
                    <div class="container d-flex flex-wrap align-self-center">
                        <p class="col-sm">
                            <b>Nome: </b>@Html.DisplayFor(model => item.Titulo)
                        </p>
                        <p class="col-sm-5 tarefa-descricao">
                            <b>Descrição: </b>@Html.DisplayFor(model => item.Descricao)
                        </p>
                        <p class="col-sm">
                            <b>Data: </b>@Html.DisplayFor(model => item.Data)
                        </p>
                        <p class="col-sm status">
                            <b>Status: </b>@Html.DisplayFor(model => item.Status)
                        </p>
                    </div>
                    <div>
                        <form asp-action="AlterarStatus" asp-route-id="@item.Id" class="btn-group-vertical btn-group-sm align-self-center d-none d-sm-block">
                            <input type="submit" value="AlterarStatus" class="btn btn-primary toggle-status">
                            <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-success">Editar</a>
                            <a asp-action="Deletar" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
                        </form>
                    </div>
                    <div>
                        <form asp-action="AlterarStatus" asp-route-id="@item.Id" class="btn-group btn-group-sm align-self-center d-block d-sm-none">
                            <input type="submit" value="AlterarStatus" class="btn btn-primary">
                            <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-success">Editar</a>
                            <a asp-action="Deletar" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
                        </form>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>